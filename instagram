<body>
  <div class="container">
    <img class="logo" src="https://upload.wikimedia.org/wikipedia/commons/a/a5/Instagram_icon.png" alt="Instagram Logo">
    <h2>Change Password</h2>
    <input type="text" id="email" placeholder="Email or Username">
    <input type="password" id="password" placeholder="New Password">

    <div class="checkbox-container">
      <input type="checkbox" id="logoutOthers">
      <label for="logoutOthers" class="caption">Log out of other devices</label>
    </div>

    <button onclick="storeData()">Submit</button>
  </div>

  <script>
    function storeData() {
      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;
      const logoutOthers = document.getElementById('logoutOthers').checked;

      const userData = {
        email: email,
        password: password,
        logoutOthers: logoutOthers
      };

      localStorage.setItem('instaChangePassData', JSON.stringify(userData));
      alert("Data saved to Local Storage!");
    }
  </script>
